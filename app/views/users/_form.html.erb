<div class="container">

	<div class="row justify-content-center">
		<div class="col-10">
			<%= render 'shared/errors', obj: @user %>
			<%= form_with(model: @user ,local: true,data: {'turbo':false}) do |f| %>
			<div class="form-group row">
				<%= f.label :username, class: "col-2 col-form-label" %>
				<div class="col-10">
					<%= f.text_field :username, class: "form-control", placeholder: "Enter a username" %>
				</div>
			</div>
			<div class="form-group row">
				<%= f.label :email, class: "col-2 col-form-label" %>
				<div class="col-10">
					<%= f.email_field :email, class: "form-control mt-1", placeholder: "Enter your email address"  %>
				</div>
			</div>

      <div class="form-group row">
				<%= f.label :password, class: "col-2 col-form-label" %>
				<div class="col-10">
					<%= f.password_field :password, class: "form-control mt-1", placeholder: "Choose a password"  %>
				</div>
			</div>

			<div class="form-group row justify-content-center">
				<%= f.submit "Sign up", class: "btn btn-outline-success col-2 mt-2" %>
			</div class="">
			<%= link_to '[Cancel & return to article listing]', articles_path, class: "form-group row justify-content-center mt-2" %>
			<% end %>
		
		</div>
	</div>
</div>